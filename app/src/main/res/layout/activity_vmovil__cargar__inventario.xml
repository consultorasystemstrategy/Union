<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="union.union_vr1.Vistas.VMovil_Cargar_Inventario">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:background="@drawable/border_bottom_personalizado_cinventario"
            android:layout_weight="4.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agente:"
                android:textSize="15dp"
                android:id="@+id/textView8"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manuel Casabona"
                android:id="@+id/textNombreAgente"
                android:textStyle="normal|bold"
                android:textSize="15dp"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liquidacion:"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N° 2"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:id="@+id/textNumeroLiquidacion"
                android:layout_alignTop="@+id/textView11"
                android:layout_alignRight="@+id/textNombreAgente" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_weight="1">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editNroGuia"
                    android:hint="Ingrese n° de guia" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:paddingTop="10dp"
                android:paddingBottom="14dp"
                android:layout_height="fill_parent"
                android:layout_weight="2">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Agregar"
                    android:id="@+id/btnAgregarGuia" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp"
            android:layout_weight="2">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listviewGuias" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
