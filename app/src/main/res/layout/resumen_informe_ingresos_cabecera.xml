<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="INGRESOS"
        android:id="@+id/textViewResumenIngresos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:id="@+id/resumen_total_descripcion"
            android:textStyle="bold|italic"
            android:textSize="12dp"
            android:textColor="@color/Personalizado4" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/resumen_total_n"
            android:textStyle="bold"
            android:textColor="@color/PersonalizadoSteve2"
            android:textSize="12dp" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Emitidos"
            android:id="@+id/resumen_total_emitido"
            android:textStyle="bold"
            android:textColor="@color/Personalizado4"
            android:textSize="12dp"
            android:gravity="right" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pagados"
            android:id="@+id/resumen_total_pagado"
            android:textStyle="bold"
            android:textColor="@color/Personalizado4"
            android:textSize="12dp"
            android:gravity="right" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cobrados"
            android:id="@+id/resumen_total_cobrado"
            android:textStyle="bold"
            android:textColor="@color/Personalizado4"
            android:textSize="12dp"
            android:gravity="right" />


        </LinearLayout>
</LinearLayout>