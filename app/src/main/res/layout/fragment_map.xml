<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="vertical"
            class="com.google.android.gms.maps.SupportMapFragment"/>

        <RadioGroup
            android:id="@+id/radio_group_list_selector"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:padding="5dp"
            android:layout_gravity="top|left"
            android:orientation="vertical"
            android:background="#80000000" >

            <RadioButton
                android:id="@+id/mapHibrido"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Satelite"
                android:textSize="10dp"
                android:textColor="#fff"
                android:layout_weight="1" />

            <View
                android:id="@+id/VerticalLine1"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="2dip"
                android:background="#aaa" />

            <RadioButton
                android:id="@+id/mapNormal"
                android:layout_width="match_parent"
                android:checked="true"
                android:textSize="10dp"
                android:text="Normal"
                android:textColor="#fff"
                android:layout_height="0dp"
                android:layout_weight="1" />



        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:background="#fff"
            android:id="@+id/layoutflag"
            android:layout_gravity="center_horizontal|bottom">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textV75"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:text="Descripcion"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ColorPUSecundario"
                        android:textStyle="italic|bold" />

                    <EditText
                        android:id="@+id/map_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:hint="descripcion"
                        android:inputType="text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:text="Direccion Fiscal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ColorPUSecundario"
                        android:textStyle="italic|bold" />

                    <EditText
                        android:id="@+id/map_direccion_fiscal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:hint="direccion fiscal"
                        android:inputType="text" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>





</LinearLayout>







