<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark5">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:weightSum="1"
                android:background="@drawable/portada3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:layout_margin="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="San Luis - La Victoria"
                        android:id="@+id/slide_textViewNombreRuta"
                        android:layout_weight="1"
                        android:textStyle="italic"
                        android:textSize="16dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:text="10"
                        android:id="@+id/slide_buttonNroEstablecimiento"
                        android:background="@color/azul"
                        android:textColor="@color/Blanco" />

                </LinearLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Orlando Arnesquito"
                    android:id="@+id/slide_textViewNombreAgente"
                    android:textSize="16dp"
                    android:textColor="@color/Dark1"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_margin="8dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Resumen"
                    android:id="@+id/slideVentas_textViewCliente"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/Blanco"
                    android:drawablePadding="16dp"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresos Totales"
                        android:id="@+id/textviewIngresosTotales"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/Blanco"
                        android:textSize="16dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:text="S/. 1000.00"
                        android:id="@+id/textView_IngresosTotales"
                        android:textColor="@color/Blanco"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Gastos"
                        android:id="@+id/textViewGastos"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/Blanco"
                        android:textSize="16dp"
                        android:layout_weight="1" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="24dp"
                        android:text="S/. 48.00"
                        android:id="@+id/textView_Gastos"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_weight="2" />
                </LinearLayout>


                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:background="@drawable/border_bottom_dark">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Principal"
                    android:id="@+id/slide_textviewPrincipal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:drawableLeft="@drawable/ic_action_place"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Blanco"
                    android:drawablePadding="16dp"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Clientes"
                    android:id="@+id/slide_textViewClientes"
                    android:paddingTop="8dp"
                    android:drawableLeft="@drawable/ic_action_person"
                    android:paddingBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Blanco"
                    android:drawablePadding="16dp"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cobranza"
                    android:id="@+id/slide_textViewCobranza"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Blanco"
                    android:drawableLeft="@drawable/ic_action_read"
                    android:drawablePadding="16dp"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Gastos"
                    android:id="@+id/slide_TextViewGastos"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Blanco"
                    android:drawableLeft="@drawable/ic_action_new_label"
                    android:drawablePadding="16dp"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Resumen"
                    android:id="@+id/slide_textViewResumen"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Blanco"
                    android:drawableLeft="@drawable/ic_action_view_as_list"
                    android:drawablePadding="16dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="A Rendir : S/. 456.00"
                    android:id="@+id/slide_textViewARendir"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/Blanco"
                    android:drawableLeft="@drawable/ic_action_view_as_list"
                    android:drawablePadding="16dp"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>