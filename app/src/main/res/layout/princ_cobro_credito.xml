<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="union.union_vr1.Vistas.VMovil_Venta_CabeceraX"
    android:orientation="vertical"
    android:background="@color/Blanco">


    <include layout="@layout/header_establecimiento"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/VCCR_LSTcresez"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textViewEstablecimientoNombre"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/Dark1"
        android:layout_weight="3">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Monto a Pagar:"
            android:id="@+id/textViewEstablecimientoNombre"
            android:layout_below="@+id/VCCR_SPNcredit"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:textColor="@color/Dark2"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/VCCR_SPNcredit"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text=""
            android:textColor="@color/Dark2"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3">

        <!--
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Cancelar"
            android:id="@+id/VCCR_BTNcancelar"
            android:layout_weight="1"
            android:background="@color/Dark3"/>-->

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Cobrar"
            android:id="@+id/VCCR_BTNactualiz"
            android:layout_weight="1"
            android:background="@color/Dark5" />
    </LinearLayout>

</LinearLayout>
