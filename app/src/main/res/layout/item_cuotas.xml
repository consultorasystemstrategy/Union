<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

<RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/miniatura_hotel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_miniatura_hotel"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_coutas" />


        <TextView
            android:id="@+id/cambiar_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/miniatura_hotel"
            android:padding="8dp"
            android:text="Cambiar Fecha"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="14sp"
            android:textColor="@color/azul"
            android:linksClickable="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fecha_cuota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:padding="8dp"
            android:text="Lunes, 18 de Diciembre del 2015"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/PersonalizadoSteve4"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/miniatura_hotel"
            android:textStyle="italic"
            android:textSize="16sp" />
    <TextView
        android:id="@+id/fijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="DEFINIDO"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="12sp"
        android:textColor="@color/azul"
        android:layout_below="@+id/miniatura_hotel"
        android:layout_toStartOf="@+id/precio_cuota"
        android:layout_marginEnd="30dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/precio_cuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="S/. 80.00"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/cambiar_fecha"
        android:layout_alignParentEnd="true"
        android:textColor="@color/PersonalizadoSteve1"
        android:textStyle="bold" />

</RelativeLayout>
    </android.support.v7.widget.CardView>