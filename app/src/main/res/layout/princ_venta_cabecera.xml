<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="union.union_vr1.Vistas.VMovil_Venta_CabeceraX"
    android:gravity="center"
    android:paddingLeft="8dp"
    android:background="@color/Blanco">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp">

                <include layout="@layout/header_establecimiento"/>
                <AutoCompleteTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VCAP_AutoCompleteProductos"
                    android:hint="Buscar productos"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    />
                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="320dp"
                    android:id="@+id/VC_listView"
                    android:minHeight="320dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutSpinner"
                android:layout_marginRight="8dp">

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VC_spinnerTipoDocumento"
                    android:layout_weight="1"
                    android:minHeight="48dp" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VC_spinnerFormaPago"
                    android:layout_weight="1"
                    android:minHeight="48dp" />

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/VC_spinnerTipoPago"
                    android:layout_weight="1"
                    android:minHeight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutButton"
                android:minHeight="64dp"
                android:layout_marginRight="8dp">

                <!--
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar Productos"
                    android:id="@+id/VC_buttonAgregarProductos"
                    android:layout_weight="1"
                    android:background="@color/Dark3" />-->

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="VENDER"
                    android:id="@+id/VC_buttonVender"
                    android:layout_weight="1"
                    android:background="@color/Dark1"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
