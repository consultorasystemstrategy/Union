<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="union.union_vr1.VMovil_BluetoothImprimir"
    android:orientation="vertical"
    android:background="@color/Blanco">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="UNIVERSIDAD PERUANA UNIÃ“N"
                android:id="@+id/textViewImprimirCabecera"
                android:textIsSelectable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Venta Cabecera"
                android:id="@+id/textViewVentaCabecera"
                android:gravity="left"
                android:background="@drawable/border_bottom"
                android:paddingBottom="4dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/border_bottom"
                android:gravity="center|fill_vertical"
                android:layout_gravity="center_vertical"
                android:paddingBottom="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cant."
                    android:typeface="monospace"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginRight="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto"
                    android:typeface="monospace"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Importe"
                    android:typeface="monospace"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:paddingRight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewImprimirContenidoLeft"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewImprimirContenidoRight"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_gravity="right"
                    android:gravity="right" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Imprimir"
                android:id="@+id/buttonImprimir"
                android:background="@drawable/border_bottom_dark" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sincronizar"
                android:id="@+id/buttonSincronizar"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
