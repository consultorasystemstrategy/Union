<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="union.union_vr1.Vistas.ImprimirArqueoCaja"
    android:orientation="vertical"
    android:background="#fff">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="RESUMEN DEL DÍA"
                android:id="@+id/textView10"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:background="@drawable/border_bottom_personalizado_cInventario"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:id="@+id/textViewLeft"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="03/09/2015"
                    android:id="@+id/textViewRight"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="INGRESOS"
                android:id="@+id/textView12"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:background="@drawable/border_bottom_personalizado_cInventario"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/resumen_total_descripcion"
                    android:textStyle="bold|italic"
                    android:textSize="12dp"
                    android:textColor="@color/Personalizado4" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/resumen_total_n"
                    android:textStyle="bold"
                    android:textColor="@color/PersonalizadoSteve2"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Emitidos"
                    android:id="@+id/resumen_total_emitido"
                    android:textStyle="bold"
                    android:textColor="@color/Personalizado4"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Pagados"
                    android:id="@+id/resumen_total_pagado"
                    android:textStyle="bold"
                    android:textColor="@color/Personalizado4"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Cobrados"
                    android:id="@+id/resumen_total_cobrado"
                    android:textStyle="bold"
                    android:textColor="@color/Personalizado4"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:id="@+id/listViewComprobantes" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="GASTOS"
                android:id="@+id/textViewGastos"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:background="@drawable/border_bottom_personalizado_cInventario"
                android:layout_marginBottom="4dp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:id="@+id/textviewNombre"
                    android:textSize="14dp"
                    android:textStyle="bold|italic"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:textColor="@color/PersonalizadoSteve4" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:text="Ruta"
                    android:id="@+id/textViewGastoRuta"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:textColor="@color/PersonalizadoSteve4"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:text="Planta"
                    android:id="@+id/textViewGastoPlanta"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:textColor="@color/PersonalizadoSteve4"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="64dp"
                    android:id="@+id/listViewResumenGastos" />
            </LinearLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Imprimir"
                android:id="@+id/buttonImprimir"
                android:background="@drawable/border_bottom_dark" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sincronizar"
                android:id="@+id/buttonSincronizar"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
