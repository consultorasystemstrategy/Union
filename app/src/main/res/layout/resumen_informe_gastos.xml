<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:text="Tipo de Gasto"
            android:id="@+id/textviewNombre"
            android:textSize="12dp"
            android:textStyle="italic"
            android:layout_weight="1"
            android:gravity="left|center_vertical|center|center_horizontal"
            android:textColor="@color/PersonalizadoSteve4" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:text="S/ 20.50"
            android:id="@+id/textViewGastoRuta"
            android:layout_weight="2"
            android:textColor="@color/PersonalizadoSteve4"
            android:textSize="12dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="8dp" />

       <!-- <TextView
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:text="S/. 20.00"
            android:id="@+id/textViewGastoPlanta"
            android:layout_weight="2"
            android:textColor="@color/PersonalizadoSteve4"
            android:textSize="12dp"
            android:gravity="left|center" />-->
    </LinearLayout>
</LinearLayout>