<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pan Integral Americano "
            android:id="@+id/VCPA_textView2NombreProducto"
            android:gravity="center"
            android:textColor="@color/PersonalizadoSteve4"
            android:textSize="24dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio : S/. 18.20"
                android:id="@+id/VCPA_textViewPrecio"
                android:gravity="center"
                android:textColor="@color/PersonalizadoSteve2"
                android:textSize="24dp"
                android:layout_weight="2" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="44"
                android:id="@+id/VCPA_textViewDisponible"
                android:gravity="center"
                android:textColor="@color/azul"
                android:textSize="24dp"
                android:layout_weight="1" />-->
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/VCAP_editTextCantidad"
            android:hint="Cantidad"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>