<resources>
    <!--Tranparencia-->
    <style name="Transparent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppThemeAppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/PersonalizadoSteve2</item>
        <item name="colorPrimaryDark">@color/PersonalizadoSteve1</item>
        <item name="colorAccent">@color/PersonalizadoSteve4</item>

        #303F9F
        FF4081
    </style>

<!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- PERSONALIZANDO LOS TEMAS PARA LA INTERGAZ DE USUARIO-->
    <style name="TemaProductosUnion" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarUnion</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>
    <style name="TemaPersonalizadoSteve" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarPersonalizadoSteve</item>
        <item name="android:buttonStyle">@style/ButtonStylePersonalizadoSteve</item>
    </style>
    <style name="TemaPersonalizadoMaterialDesign" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarPersonalizadoMaterialDeign</item>
        <item name="android:buttonStyle">@style/ButtonStylePersonalizadoMaterialDesign</item>
    </style>
    <style name="TemaDark" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
        <item name="android:buttonStyle">@style/ButtonStyleDark</item>
    </style>




    <style name="ActionBarUnion" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ColorPUPrincipal</item>
    </style>
    <style name="MyButtonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/border_bottom</item>
        <item name="android:textColor">@color/ColorPUTercero</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >12dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="ActionBarPersonalizadoSteve" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/Personalizado1</item>
    </style>

    <style name="ButtonStylePersonalizadoSteve" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/border_bottom_personalizado_steve</item>
        <item name="android:textColor">@color/PersonalizadoSteve3</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >12dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="ActionBarPersonalizadoMaterialDeign" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/Personalizado1</item>
    </style>
    <style name="ButtonStylePersonalizadoMaterialDesign" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/border_bottom_personalizado_material_design</item>
        <item name="android:textColor">@color/Personalizado3</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >12dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>


    <style name="ActionBarDark" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/Dark1</item>
    </style>
    <style name="ButtonStyleDark" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@color/Dark5</item>
        <item name="android:textColor">@color/Dark2</item>
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >12dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>



</resources>
